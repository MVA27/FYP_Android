<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="50"
            android:useLevel="false">
            <solid android:color="#DDD"/>
            <gradient android:startColor="@color/mediumBlue" android:endColor="@color/lightBlue"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="50"
            android:useLevel="true">
            <gradient android:startColor="@color/darkBlue" android:endColor="@color/mediumBlue"/>
        </shape>
    </item>
</layer-list>