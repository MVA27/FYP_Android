<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityLogin" parent="AppTheme">
        <item name="android:statusBarColor">@color/blue1</item>
    </style>
    <style name="ActivityDisplay" parent="AppTheme">
        <item name="android:statusBarColor">@color/blue5</item>
    </style>
    <style name="ActivitySettings" parent="AppTheme">
        <item name="android:statusBarColor">@color/blue3</item>
    </style>

    <style name="ActivityHistoricalData" parent="AppTheme">
        <item name="android:statusBarColor">@color/blue1</item>
    </style>
    <style name="ActivityRegisterUser" parent="AppTheme">
        <item name="android:statusBarColor">@color/blue1</item>
    </style>
    <style name="ActivityOTP" parent="AppTheme">
        <item name="android:statusBarColor">@color/blue1</item>
    </style>



    <!-- Progress Bar Theme of Display Activity-->
    <style name="progressBar">
        <item name="android:progressDrawable">@drawable/background_progress_bar</item>
    </style>


</resources>